{
  "name": "poi-plugin-tsundb",
  "version": "0.0.5",
  "description": "TsunDB data submission plugin for Poi",
  "keywords": [
    "kancolle",
    "poi",
    "poi-plugin",
    "tsundb"
  ],
  "repository": "git@github.com:kcwiki/poi-plugin-tsundb.git",
  "homepage": "https://github.com/kcwiki/poi-plugin-tsundb#readme",
  "bugs": "https://github.com/kcwiki/poi-plugin-tsundb/issues",
  "author": {
    "name": "gakada",
    "url": "https://github.com/gakada"
  },
  "license": "MIT",
  "main": "dist/index.js",
  "files": [
    "./dist",
    "./i18n"
  ],
  "scripts": {
    "format": "prettier --loglevel warn --write '**/*.{ts,json,yml,md}'",
    "lint": "tslint --project tsconfig.json --fix",
    "lint-check": "tslint-config-prettier-check ./tslint.json",
    "clean": "rm -rf build dist server/dist",
    "build": "yarn clean && tsc && mv build/server server/dist && mkdir -p dist && mv build/client/* dist",
    "test": "yarn format && yarn lint && yarn build && cross-env TSUNDB_API_URL=http://localhost:12345/api tape -r ts-node/register tests",
    "serve": "ts-node server/index.ts",
    "prepack": "yarn test",
    "upgrade": "yarn upgrade --latest && yarn upgrade-interactive",
    "now": "now rm tsundb -y ; now server && now alias -A server/now.json"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.2.1",
    "@commitlint/config-conventional": "^7.1.2",
    "@types/fs-extra": "^5.0.4",
    "@types/node": "^11.9.4",
    "@types/node-fetch": "^2.1.4",
    "@types/react": "^16.7.8",
    "@types/react-dom": "^16.0.11",
    "@types/tape": "^4.2.32",
    "body-parser": "^1.18.3",
    "cross-env": "^5.2.0",
    "fastify": "^1.13.0",
    "fs-extra": "^7.0.1",
    "husky": "^1.2.0",
    "lint-staged": "^8.1.0",
    "node-fetch": "^2.3.0",
    "prettier": "^1.15.2",
    "react": "^16.6.3",
    "react-dom": "^16.6.3",
    "tape": "^4.9.1",
    "ts-node": "^8.0.2",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.17.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "^3.1.6"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.ts": "tslint"
  },
  "prettier": {
    "printWidth": 150,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "poiPlugin": {
    "title": "Plugin.Title",
    "description": "Plugin.Description",
    "icon": "fa/pie-chart",
    "priority": 100
  }
}
